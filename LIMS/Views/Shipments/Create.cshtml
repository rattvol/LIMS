@model LIMS.Models.Shipment

@{
    ViewData["Title"] = "Create";
}
@{string dataToday = DateTime.Now.ToShortDateString(); }
<h1>Добавить приходный документ</h1>

<hr />
<h4>Приходный документ от @dataToday</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Supplyerid" class="control-label">Поставщик</label>
                <select asp-for="Supplyerid" class ="form-control" asp-items="ViewBag.Supplyerid"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать и добавить товары" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к перечню</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
