@model LIMS.Models.Nomencl

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление единицы номенклатуры</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название номенклатуры</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Groupnomid" class="control-label">Группа номенклатуры</label>
                <select asp-for="Groupnomid" class="form-control" asp-items="ViewBag.Groupnomid"></select>
                <a class="small" asp-controller="Groupnoms" asp-action="Create" target="_parent">Добавить новую группу</a>
            </div>
            <input asp-for="Deleted" class="form-control" hidden value="false" />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к перечню</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
